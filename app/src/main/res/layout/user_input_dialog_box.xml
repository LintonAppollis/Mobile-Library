<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_dialog_layout_design_user_input1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="5dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Book "
        android:textColor="#000"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">



        <EditText

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter Authors Intials"
            android:id="@+id/txt_initial"
            android:layout_weight="1"
            android:background="@drawable/edittext_style2"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="13dp"
            android:inputType="text" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter Surname"
            android:background="@drawable/edittext_style2"
            android:id="@+id/txt_surname"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="13dp"
            android:inputType="text" />


        <EditText

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter Book Title"
            android:id="@+id/txt_book_title"
            android:layout_weight="1"
            android:background="@drawable/edittext_style2"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="13dp"
            android:inputType="text" />


        <EditText

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter Book Edition"
            android:id="@+id/txt_book_edition"
            android:layout_weight="1"
            android:background="@drawable/edittext_style2"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="13dp"
            android:inputType="text" />


        <EditText

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter Book ISBN"
            android:id="@+id/txt_book_isbn"
            android:layout_weight="1"
            android:background="@drawable/edittext_style2"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="13dp"
            android:inputType="text" />


    </LinearLayout>





</LinearLayout>